module button_avalon_interface (
    input clk, rst_n,
    input [7:0] button,

    // Avalon MM interface
    input address, read, write, chipselect,
    input [31:0] writedata,
    output [31:0] readdata,
    output waitrequest
);

    wire we;

    assign we = write & chipselect;

    top_button_controller tbc(
        /*I*/ .clk(clk),
        /*I*/ .rst_n(rst_n),
        /*I*/ .we(we),
        /*I*/ .buttons(buttons),
        /*I*/ .register_addr(address),
        /*I*/ .wr_data(writedata),
        /*O*/ .rd_data(readdata),
        /*O*/ .done(waitrequest)
    );
    
endmodule