#ifndef _KEY_INTERFACE_H_
#define _KEY_INTERFACE_H_

#define MEMORIA_BASE_KEY 0x03000
#define REG_DATA_OFFSET 0
#define REG_CONTROLE_OFFSET 1

// Inicializa a interface KEY, ativando os controles necessários.
int open_KEY();

// Lê o valor do registrador de dados da interface KEY.
// Armazena o valor lido em 'kay_data' e reseta o registrador se não for zero.
// Retorna 1 se um valor foi lido e o registrador foi resetado, caso contrário, retorna 0.
int read_KEY(int* kay_data);

// Fecha a interface KEY, desativando os controles.
int close_KEY();

#endif // _KEY_INTERFACE_H_
