#include <stdio.h>
#include "system.h"
#include <alt_types.h>
#include "altera_avalon_pio_regs.h"
#include "sys/alt_irq.h"
#include "KEY.h"


int main() {
	printf("init\n");
	initialize_joystick();
	//close_joystick();
    //alt_ic_isr_register(1, 1, (void *)interrupt_handler, NULL, 0x0);

	while (1){
		if (is_KEY_pressed(0)){
			printf("O botao SELECT foi precionado\n");
		}
		if (is_KEY_pressed(1)){
			printf("O botao START foi precionado\n");
		}
		if (is_KEY_pressed(2)){
			printf("O botao TL foi precionado\n");
		}
		if (is_KEY_pressed(3)){
			printf("O botao TR foi precionado\n");
		}
		if (is_KEY_pressed(4)){
			printf("O botao B foi precionado\n");
		}
		if (is_KEY_pressed(5)){
			printf("O botao A foi precionado\n");
		}
		if (is_KEY_pressed(6)){
			printf("O botao Y foi precionado\n");
		}
		if (is_KEY_pressed(7)){
			printf("O botao X foi precionado\n");
		}
	}

	 return 0;
}
